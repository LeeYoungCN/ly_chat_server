    "version": "0.2.0",
    "configurations": [
        {
            "name": "MSVC: Debug Executable",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/out/build/win_clang_msvc_debug/bin/ly_chat_test.exe",
            "args": [
                "--gtest_filter=*"
            ],
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "stopAtEntry": false,
        },
        {
            "name": "GDB: Debug Executable",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/out/build/linux_clang_debug/bin/ly_chat_test",
            "args": [],
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "stopAtEntry": false,
            "MIMode": "gdb",
            "miDebuggerPath": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "LLDB: Debug Executable",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/out/build/darwin_clang_debug/bin/ly_chat_test",  // 可执行文件路径
            "args": [],  // 程序参数
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",  // 指定使用 LLDB
        }
    ],
    "preLaunchTask": "CMake Build"
}
