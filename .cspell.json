{
    "version": "0.2",
    "words": [
        "appender",
        "constexpr",
        "ctest",
        "getopt",
        "GNUCXX",
        "gtest",
        "Makefiles",
        "MSVC",
        "NDEBUG",
        "pthread",
        "riscv",
        "STREQUAL",
        "Wconversion",
        "Wextra"
    ],
    "ignorePaths": [
        "out/**", // 忽略构建目录
        "doc/**"
    ],
    "ignoreRegExpList": [
        // 忽略以 - 或 -- 开头的命令行参数（如 -Wall、--config）
        "^--?[a-zA-Z0-9-]+$",
        // 忽略带等号的参数（如 --std=c++17）
        "^--?[a-zA-Z0-9-]+=.*$",
         // cmake 选项
        "-D[A-Z_]+=.*",
        // 宏定义
        "^#[a-z_]+.*"
    ]
}
